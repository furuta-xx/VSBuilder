<Window x:Class="VSBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSBuilder"
        mc:Ignorable="d" Title="VSBuilder" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./ResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True" Margin="20">
        <!-- Setting -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Command="{Binding CommandAddSolution}" Margin="0 0 10 0">ソリューションの追加</Button>
            <Button Command="{Binding CommandEditSolution}" Visibility="{Binding SolutionSettingsVisibility}" Margin="0 0 10 0">選択ソリューションの編集</Button>
            <Button Command="{Binding CommandDeleteSolution}" Visibility="{Binding SolutionSettingsVisibility}" Margin="0 0 10 0">選択ソリューションの削除</Button>
            <DockPanel Visibility="Collapsed">
            <Button Command="{Binding CommandAddCopyFile}" Margin="0 0 10 0">コピーファイルの追加</Button>
            <Button Command="{Binding CommandEditCopyFile}" Visibility="{Binding CopyFilesVisibility}" Margin="0 0 10 0">選択コピーファイルの編集</Button>
            <Button Command="{Binding CommandDeleteCopyFile}" Visibility="{Binding CopyFilesVisibility}">選択コピーファイルの削除</Button>
            </DockPanel>
        </StackPanel>
        <!-- Output -->
        <StackPanel Orientation="Horizontal" Visibility="{Binding OutputVisibility}" DockPanel.Dock="Bottom" Margin="0 10 0 0">
            <Button Command="{Binding CommandBulkBuild}" Name="ButtonBulkBuild">一括ビルド</Button>
        </StackPanel>
        <TextBlock DockPanel.Dock="Bottom" Text="{Binding MessageText}" Visibility="{Binding MessageTextVisibility}" Margin="0 20 0 0" />
        <!-- Solutions & CopyFiles -->
        <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
            <!-- Solutions -->
            <StackPanel Orientation="Vertical" Visibility="{Binding SolutionSettingsVisibility}" Margin="0 0 20 0">
                <TextBlock FontWeight="Black" FontSize="20" Margin="0 0 0 10">Solutions</TextBlock>
                <ItemsControl Name="ItemsSolutions" ItemsSource="{Binding SolutionSettings}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsOutput}" Margin="0 0 0 10">
                                <StackPanel Orientation="Vertical" Margin="3 -3 0 0">
                                    <TextBlock FontWeight="DemiBold" FontSize="16" Text="{Binding Name}" Margin="0 0 0 5" />
                                    <TextBlock FontSize="8" Text="{Binding SolutionFilePath}" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="8" Text="{Binding BuildConfig}" />
                                        <TextBlock FontSize="8" Text="|" Margin="5 0 5 0" />
                                        <TextBlock FontSize="8" Text="{Binding Platform}" />
                                    </StackPanel>
                                    <TextBlock FontSize="8" Text="{Binding ModulePath}" />
                                    <TextBlock FontSize="8" Text="{Binding OutputPath}" />
                                </StackPanel>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <!-- CopyFiles -->
            <StackPanel Orientation="Vertical" Visibility="{Binding CopyFilesVisibility}">
                <TextBlock FontWeight="Black" FontSize="20" Margin="0 0 0 10">CopyFiles</TextBlock>
                <ItemsControl Name="ItemsCopyFiles" ItemsSource="{Binding CopyFiles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Margin="0 0 0 10">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock></TextBlock>
                                    <TextBlock></TextBlock>
                                    <TextBlock></TextBlock>
                                </StackPanel>
                            </CheckBox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
